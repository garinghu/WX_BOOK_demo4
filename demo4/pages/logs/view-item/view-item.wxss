.review{
    width:100%;
    height:600rpx;
    display:flex;
    flex-direction: column;
    background-color: #fff;
    margin-top:25rpx;
}
.review-writer{
    display:flex;
    flex-direction: row;
    height:50rpx;
}
.review-photo{
    width:40rpx;
    height:40rpx;
    border-radius:50%;
    margin-top:5rpx;
}
.review-writer-name{
    line-height:50rpx;
    font-size:10px;
    margin-left:10rpx;
    color:#888888;
}
.review-date{
    line-height:50rpx;
    font-size:10px;
    margin-left:10rpx;
    color:#888888;
}
.reviewsrc{
    width:100%;
    height:350rpx;
}
.review-information{
    width:100%;
    height:200rpx;
    overflow: hidden;
}
.review-content{
    font-size:12px;
    color:#888888;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    /*white-space: nowrap;*/
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:4;
 
}