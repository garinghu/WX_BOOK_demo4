.list{
  /*display: flex;
  flex-direction: row;  */
  width:100%;
  height:300rpx;
  margin:0 auto;
  margin-top:20rpx;
  background-color: #fff;
  box-shadow: 3px 3px 3px;
  border-bottom:1rpx solid #ededed;
}
.list-paper{
    width:200rpx;
    height:200rpx;
    margin-left:20rpx;
    margin-top:50rpx;
    margin-right:20rpx;
    float:left;
}
.list-texting{
    display:flex;
    flex-direction: column;
    width:60%;
    float:right;

}
.list-type{
    font-size:15px;
    color:rgb(248, 153, 3);
    background-color: black;
}
.list-list-name{
    font-size:20px;
   color:#444444;
}
.list-writer{
    display: flex;
    flex-direction: row;
    height:50rpx;
    margin-top:10rpx;
    margin-right:10rpx;
}
.list-photo{
    width:40rpx;
    height:40rpx;
    border-radius:50%;
}
.list-writer-name{
    font-size:10px;
    margin-left:10rpx;
    color:#888888;
}
.list-date{
    font-size:10px;
    margin-left:10rpx;
    color:#888888;
}
.list-content{
    width:400rpx;
    height:160rpx;
}
.list-content-text{
    font-size:12px;
    color:#888888;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    /*white-space: nowrap;*/
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:4;
}
