@import "/pages/logs/logs-item/logs-item.wxss";
.detailcontainer{
    display: flex;
    flex-direction: column;
}
.major-src{
    width:100%;
    height:400rpx;
}
.incontainer{
    display: flex;
    flex-direction: column;
    width:95%;
    margin:0 auto;
    margin-top:20rpx;
}
.tittle{
    letter-spacing: 3px;
}
.writer{
    margin-top:20rpx;
    width:95%;
    height:50rpx;
    display:flex;
    flex-direction: row;
}
.writer-src{
    width:40rpx;
    height:40rpx;
    border-radius:50%;
}
.name{
    font-size:10px;
    margin-left:10rpx;
    color:#888888;
}
.date{
    font-size:10px;
    margin-left:10rpx;
    color:#888888;
}
.bar{
    margin:0 auto;
     margin-top:30rpx;
     margin-bottom: 30rpx;
    width:70%;
    height:1rpx;
    background-color: #ededed;
}
.content{
    display:flex;
    flex-direction: column;
}
.content text{
    font-size:15px;
}
.content image{
    width:100%;
    height:300rpx;
}
.recommend{
    /*display:flex;
    flex-direction: row;*/
    text-align: center;
    width:100%;
    height:60rpx;
    line-height: 60rpx;
    margin-top:70rpx;
}
.recommendtext{
    font-size: 15px;
    color:#888888;
}
.leftbar{
    width:30%;
    height:2rpx;
    float:left;
    background-color: #ededed;
    margin-top:29rpx;
    margin-right:10rpx;
}
.rightbar{
    width:30%;
    height:2rpx;
    float:right;
    background-color: #ededed;
    margin-top:29rpx;
    margin-right:10rpx;
}
.inbar{
    width:100%;
    height:1rpx;
    background-color:#ededed;
}

