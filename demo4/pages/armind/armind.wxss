/*@import "/pages/armind/recommend-item/recommend-item.wxml";*/

page{ 
 display: flex; 
 flex-direction: column; 
 height: 100%; 
} 
.navbar{ 
 flex: none; 
 display: flex; 
 background: #fff; 
 width:100%;
 margin:0 auto;
} 
.navbar .item{ 
 position: relative; 
 flex: auto; 
 text-align: center; 
 line-height: 80rpx; 
}
.navbar .item.active{ 
 color: #FFCC00; 
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 4rpx; 
 background: #FFCC00; 
}




.recommend{
    display:flex;
    flex-direction: column;
}
.list{
    width:100%;
    height:151rpx;
    
}
.officialsrc{
    width:100rpx;
    height:100rpx;
    border-radius:50%;
    float:left;
    margin-left:20rpx;
    margin-top:25rpx;
}
.content{
    width:80%;
    height:150rpx;
    float:right;
}
.information{
    width:100%;
    height:50rpx;
    line-height: 50rpx;
}
.littleremind{
    width:20rpx;
    height:20rpx;
    float:left;
    border-radius:50%;
    background-color:#FFCC00;
    margin-top:15rpx;
    margin-right:10rpx; 
}
.identity{
    float:left;
    font-size: 20px;
}
.date{
    float:right;
    font-size:15px;
    color: #888888;
    margin-right:10rpx;
}
.iconsrc{
    float:right;
    width:30rpx;
    height:40rpx;
    margin-top:5rpx;
}
.contenttext{
    float:right;
    font-size:12px;
    color:#888888;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}
.bar{
    width:70%;
    height:1rpx;
    background-color: #ededed;
    float:right;
}
